<!DOCTYPE html>
<html>
  <head>


    <title>Sparta Course Portal</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag "https://fonts.googleapis.com/icon?family=Material+Icons" %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="assets/simplemde.min.css">
<script src="assets/simplemde.min.js"></script>
  </head>

  <body>

    <header>
      <img src="/logo.png" alt="">
      <h1 class="main-header">Course Portal</h1>

      <seciton id="pageHeader">
          <section class="login-info">
            <% if notice %>
              <p class="alert alert-success"><%= notice %></p>
            <% end %>
            <% if alert %>
              <p class="alert alert-danger"><%= alert %></p>
            <% end %>

            <% if user_signed_in? %>
            <%= current_user.email %>
            <% end %>
            <%= link_to "Sign Out", destroy_user_session_path, method: :delete %>

          </section>
    </header>

<div class="navBar">

      <% if current_user.try(:admin?) %>
          <nav>
            <%= link_to "Courses " , courses_path %>
            <%= link_to "Groups" , groups_path %>
            <%= link_to "Syllabi" , syllabi_index_path %>
          </nav>
        <%else%>
          <nav>
            <%= link_to "Groups" , groups_list_path %>
          </nav>
        <%end%>
</div>

    <div class="wrapper">

    <%= yield %>

    </div>

    <footer class="footer">
      &copy; Copyright Sparta Global 2017
    </footer>

  </body>
</html>
